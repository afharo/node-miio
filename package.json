    "eslint-plugin-n": "17.21.3",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^30.0.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "8.41.0"
